---
import { Icon } from 'astro-icon/components';
// import { ModeToggle } from "@/components/ModeToggle";
// import { Logo } from "@/components/Logo";

const navItems = [
  { name: 'Dashboard', icon: 'lucide:layout-dashboard', href: '/' },
  { name: 'Puzzle Games', icon: 'lucide:puzzle', href: '/puzzle' },
  { name: 'Word Games', icon: 'lucide:whole-word', href: '/action' },
  { name: 'Strategy Games', icon: 'lucide:brain', href: '/strategy' },
  { name: 'Leaderboard', icon: 'lucide:trophy', href: '/leaderboard' },
  { name: 'Settings', icon: 'lucide:settings', href: '/settings' },
];
---

<aside class="bg-gray-800 text-white w-64 min-h-screen p-4">
  <nav>
    <ul>
      {navItems.map((item) => (
        <li class="mb-2">
          <a
            href={item.href}
            class="flex items-center p-2 rounded hover:bg-gray-700 transition-colors"
          >
            <Icon name={item.icon} class="w-6 h-6 mr-3" />
            {item.name}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</aside>

<script>
  const path = window.location.pathname;
  const links = document.querySelectorAll('aside a');
  links.forEach(link => {
    if (link.getAttribute('href') === path) {
      link.classList.add('bg-gray-700');
    }
  });
</script>

